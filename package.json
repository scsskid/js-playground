{
  "name": "fem",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "node-sass-chokidar ./src -o ./ --watch && light-server -s . -w \"**/*.css # # reloadcss\" -w \"**/*.js, **/*.html\""
    
  },
  "prettier": {
    "parser": "babel",
    "useTabs": false,
    "printWidth": 120,
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "rules": {},
    "extends": [
      "airbnb",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "mixin",
            "define-mixin",
            "media",
            "import",
            "custom-selector",
            "custom-media",
            "font-face",
            "import-sanitize"
          ]
        }
      ],
      "block-no-empty": null,
      "no-duplicate-selectors": null
    }
  },
  "dependencies": {
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "light-server": "^2.6.4",
    "node-sass-chokidar": "^1.5.0",
    "prettier": "^1.19.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0"
  },
  "devDependencies": {}
}
