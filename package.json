{
  "name": "fem",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build:js": "node esbuilder.js",
    "build:css": "node dart-sass.js",
    "start": "node esbuilder.js --watch",
    "serve": "node browser-sync.js"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "rules": {},
    "extends": [
      "airbnb",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "mixin",
            "define-mixin",
            "media",
            "import",
            "custom-selector",
            "custom-media",
            "font-face",
            "import-sanitize"
          ]
        }
      ],
      "block-no-empty": null,
      "no-duplicate-selectors": null
    }
  },
  "dependencies": {
    "browser-sync": "^2.26.14",
    "chokidar": "^3.4.2",
    "esbuild": "^0.12.5",
    "esbuild-plugin-sass": "^0.5.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.3.0",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.34.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  }
}
